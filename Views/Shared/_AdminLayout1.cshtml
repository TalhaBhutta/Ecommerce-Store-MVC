<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication5</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/assets/adminNav/css/style.css">
    <style>
                div.content2 {
          margin-left: 200px;
          padding: 1px 16px;
          height: 1000px;
        }
    </style>
</head>
<body>
    <div class="wrapper d-flex align-items-stretch">
        <nav style="position:fixed; height:92%" id="sidebar">
            <div class="p-4 pt-5">
                <a href="#" class="img logo rounded-circle mb-5" style="background-image: url(~/assets/adminNav/images/logo.jpg);"></a>
                <ul class="list-unstyled components mb-5">
                    <li>
                        <a asp-action="Index" asp-controller="Home">Home</a>
                    </li>
                    <li>
                        <a href="#">About</a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="Role">Roles</a>
                    </li>
                    <li>
                        <a asp-action="OrderListAll" asp-controller="Cart">Orders</a>
                    </li>
                    <li>
                        <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Pages</a>
                        <ul class="collapse list-unstyled" id="pageSubmenu">
                            <li>
                                <a asp-action="Index" asp-controller="ProductCategory">Product Category</a>
                            </li>
                            <li>
                                <a asp-action="Create" asp-controller="ProductCategory">Add Category</a>
                            </li>
                            <li>
                                <a asp-action="Index" asp-controller="Product">Products</a>
                            </li>
                            <li>
                                <a asp-action="Create" asp-controller="Product">Add Product</a>
                            </li>
                        </ul>
                    </li>
                </ul>

            </div>
        </nav>

        <!-- Page Content  -->
        <div id="content" class="p-2 p-md-5">

            <div style="max-width:70%" class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
            <footer class="border-top footer text-muted">
                <div class="container">
                    &copy; 2022 - WebApplication5 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/assets/adminNav/js/jquery.min.js"></script>
    <script src="~/assets/adminNav/js/popper.js"></script>
    <script src="~/assets/adminNav/js/bootstrap.min.js"></script>
    <script src="~/assets/adminNav/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
