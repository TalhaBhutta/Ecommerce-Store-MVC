@model NetCuisine.ViewModels.OrderCartViewModel

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-12">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Billing Address</span></h5>

            <div class="bg-light p-30 mb-5">
                <div class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-6 form-group">
                        <label asp-for="Name"></label>
                        <span class="form-control">@Model.Name</span>
                    </div>
                    <div style="display:none" class="col-md-6 form-group">
                        <input asp-for="UserId" class="form-control" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="Email"></label>
                        <span class="form-control">@Model.Email</span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="Phone"></label>
                        <span class="form-control">@Model.Phone</span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="Address"></label>
                        <span class="form-control">@Model.Address</span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="City"></label>
                        <span class="form-control">@Model.City</span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="Province"></label>
                        <span class="form-control">@Model.Province</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th style="left">Products</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Sub Total</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (var item in Model.OrderItems)
                    {
                        <tr>
                            <td class="align-middle">@item.ItemName</td>
                            <td class="align-middle">Rs @item.ItemPrice</td>
                            <td class="align-middle">
                                <div class="input-group quantity mx-auto" style="width: 100px;">
                                    <label class="form-control form-control-sm bg-secondary border-0 text-center" >@item.ItemQuantity</label>
                                </div>
                            </td>
                            <td class="align-middle">Rs @(item.ItemPrice * item.ItemQuantity)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Order Details</span></h5>
            <div class="bg-light p-30 mb-5">
                <div class="pt-2">
                    <div class="d-flex justify-content-between mt-2">
                        <h5>Total</h5>
                        <h5>Rs @Model.OrderTotal</h5>
                    </div>
                </div>
                <br />
                <h5 style="background-color:greenyellow">Thanks Your Order has been placed successfully</h5>
            </div>
             
        </div>
    </div>

</div>





